#include <stdio.h>

// Function to find the maximum and minimum value of an array
void findMinMax(int arr[], int size, int *max, int *min) {
    // Initialize the maximum and minimum values
    *max = arr[0];
    *min = arr[0];
    
    // Loop through the array and update the maximum and minimum values
    for (int i = 1; i < size; i++) {
        if (arr[i] > *max) {
            *max = arr[i];
        }
        if (arr[i] < *min) {
            *min = arr[i];
        }
    }
}

int main() {
    int arr[] = {5, 8, 3, 10, 2};
    int size = sizeof(arr) / sizeof(arr[0]);
    int max, min;
    
    // Call the function to find the maximum and minimum value of the array
    findMinMax(arr, size, &max, &min);
    
    // Print the maximum and minimum values
    printf("Maximum value: %d\n", max);
    printf("Minimum value: %d\n", min);
    
    return 0;
}
